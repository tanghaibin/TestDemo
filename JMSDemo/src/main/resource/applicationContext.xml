<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd

		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

       <context:component-scan base-package="com.tanghaibin.top"></context:component-scan>

       <!-- 创建连接工厂-->
       <!-- ActiveMQ -->
       <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
              <property name = "brokerURL" value="tcp://localhost:61616"/>
       </bean>
       <!-- 声明消息目标：可以使队列；也可以是主题-->
       <!-- 队列-->
       <bean id="mqiqeDestination" class="org.apache.activemq.command.ActiveMQQueue">
              <constructor-arg index="0" value="mqiqe.queue"/>
       </bean>
       <!-- 主题-->
       <!--<bean id="mqiqeDestination" class="org.apache.activemq.command.ActiveMQTopic">-->
              <!--<constructor-arg index="0" value="mqiqe.topic"/>-->
       <!--</bean>-->

       <!-- 使用jmsTemplate模板；JmsTemplate是Spring消除冗长和重复ＪＭＳ代码解决方案。-->
       <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
              <property name="connectionFactory" ref="connectionFactory"/>
              <!--注入默认消息目标-->
              <property name="defaultDestination" ref="mqiqeDestination"/>
       </bean>
       <!-- 消息发送者-->
       <bean id="mqiqeSend" class="com.tanghaibin.top.serviceimpl.MqiqeSendImpl">
              <property name="jmsTemplate" ref="jmsTemplate"/>
       </bean>
       <!-- 消息接受者-->
       <bean id="mqiqeReceiver" class="com.tanghaibin.top.serviceimpl.MqiqeReceiverImpl">
              <property name="jmsTemplate" ref="jmsTemplate"/>
       </bean>
</beans>